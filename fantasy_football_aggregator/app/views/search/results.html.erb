<div class="page-header">
  <h1>Player Search</h1>
</div>

<!-- Future versions will have more search options such as position, team, and first name -->

<form action="/search/results" method="get" class="form-inline">
  <div class="form-group">
    <label for="lastNameInput">Last Name:</label>
    <input type="text" class="form-control" id="lastNameInput" name="lastNameInput" placeholder="Enter last name">
  </div>
  <button type="submit" class="btn btn-success">Submit</button>
</form>

<hr>


<table class="table table-striped table-bordered table-condensed">
  <tr style="color: white; background: #5cb85c;" >
   <td>Player     </td>
   <td>League     </td>
   <td>Platform   </td>
   <td>Owner      </td>
   <td>Action     </td>
 </tr>
 <% @resultsAll.each do |result| %>
 <tr>
  <td><%= result[:resultPlayer] %>   </td>
  <td><%= result[:leagueName] %>     </td>
  <td><%= result[:platform] %>       </td>
  <td><%= result[:resultAvail] %>  </td>
  <td><a href="<%= result[:resultLink] %>" target="_blank"><%= result[:resultLinkAction] %></a></td>
</tr>
<% end %>
</table>


