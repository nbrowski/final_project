<!-- Validation failure messages -->

<% if @league.errors.any? %>
  <% @league.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit <%= @league.name %> league</h3>
      </div>
      <div class="panel-body">
        <form action="/update_league/<%= @league.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for team_number -->
          <div class="form-group">
            <label for="team_number" class="col-sm-2 control-label">
              Team number
            </label>
            <div class="col-sm-10">
              <input type="text" id="team_number" name="team_number" placeholder="Team number" class="form-control" value="<%= @league.team_number %>">
            </div>
          </div>

          <!-- Label and input for name -->
          <div class="form-group">
            <label for="name" class="col-sm-2 control-label">
              Name
            </label>
            <div class="col-sm-10">
              <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @league.name %>">
            </div>
          </div>

          <!-- Label and input for league_number -->
          <div class="form-group">
            <label for="league_number" class="col-sm-2 control-label">
              League number
            </label>
            <div class="col-sm-10">
              <input type="text" id="league_number" name="league_number" placeholder="League number" class="form-control" value="<%= @league.league_number %>">
            </div>
          </div>

          <!-- Label and input for account_id -->
          <div class="form-group">
            <label for="account_id" class="col-sm-2 control-label">
              Account
            </label>
            <div class="col-sm-10">
              <%= select_tag(:account_id, options_from_collection_for_select(current_user.accounts, :id, :platform, @league.account_id), :class => "form-control") %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update League
              </button>
              or
              <a href="/leagues/<%= @league.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
